@using BloodDonationManagementSystem.Models.Login
@model LoginViewModel
<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<div class="login-container">
    <div class="row">
        <form method="post">
            <div class="form-group">
                <label class="control-label">Kullanıcı Tipi</label>
                <div>
                    <select class="form-select" id="kullanicitipleri">
                        @foreach (var item in Model.KullaniciTipleri)
                        {
                            <option value="@item.Id">@item.Isim</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">T.C. Kimlik Numarası</label>
                <div>
                    <input class="form-control" asp-for="@Model.Uye.TcKimlikNo">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Şifre</label>
                <div>
                    <input id="password-field" type="password" class="form-control" asp-for="@Model.Uye.Sifre">
                    <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="@Model.BeniHatirla"></input>
                <label class="control-label">Beni Hatırla</label>
            </div>
            <div class="form-group d-flex justify-content-center" style="margin-bottom:0px">
                <div>
                    <button type="submit" class="btn" style="background-color:#52616B;color:#F0F5F9;font-size:20px;font-family:Calibri;">Giriş Yap</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    $(".toggle-password").click(function () {

        $(this).toggleClass("fa-eye fa-eye-slash");
        var input = $($(this).attr("toggle"));
        if (input.attr("type") == "password") {
            input.attr("type", "text");
        } else {
            input.attr("type", "password");
        }
    });

    document.getElementById('phone').addEventListener('input', function (e) {
        var x = e.target.value.replace(/\D/g, '').match(/(\d{0,3})(\d{0,3})(\d{0,4})/);
        e.target.value = !x[2] ? x[1] : '(' + x[1] + ') ' + x[2] + (x[3] ? '-' + x[3] : '');
    });
</script>